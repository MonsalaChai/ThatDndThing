<?xml version="1.0" encoding="utf-8"?>
<!-- This layout *is* BasicConfigView. Modifications will need to be reflected
     in the java source as well. -->
<merge
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!--
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_margin="2dp"
    tools:context="com.monsalachai.dndthing.entry.gui.BasicConfigView">
    -->

    <EditText
        android:id="@+id/label_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/name_hint"
        android:maxLines="1"
        android:inputType="text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:focusableInTouchMode="true">

        <Switch
            android:id="@+id/rollable_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/basic_entry_config_switch" />

        <Spinner
            android:id="@+id/type_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</merge>